html
body
  padding: 0
  margin: 0
  width: 100%
  height: 100%
  font-family: "Ubuntu", "Helvetica Neue", Helvetica, Arial, sans-serif

  #app
    padding-top: 30px

header
  position: fixed
  z-index: 10
  height: 30px
  left: 0
  top: 0
  background: #000
  width: 100%

  ul
    margin: 0
    padding: 0

  li
    float: left
    line-height: 30px
    list-style: none
    margin-right: 5px
  a
    color: #fff
    text-decoration: none
    border-bottom: 1px solid #fff

.user-info
  float: right

.v
  height: 200px
  text-align: center
  position: relative
  color:#fff

  &:before
    content: ""
    position: absolute
    left:0
    top:0
    bottom: 0
    right:0
    background: linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(0,0,0,0.7) 100%)

.vName
  position: absolute
  top:30px
  font-size: 23px
  font-weight: bold
  left:00px
  padding: 5px 10px
  background: rgba(0, 0, 0, 0.8)
  text-align: center

.vRating
  position: absolute
  right: 0
  bottom:10px
  padding: 4px 6px
  background: rgba(0, 0, 0, 0.8)
  font-size: 10px

  &__num
    font-size: 16px

.vHereNow
  position: absolute
  left: 10px
  bottom: 10px

.checkinBtn
  position: absolute
  right:0
  top:0
  background: rgba(0, 0, 0, 0.8)
  padding: 5px
  font-size: 12px

  &:before
    content: ''
    position: absolute
    top: 100%
    right: 0
    width: 0
    height: 0
    border-style: solid
    border-width: 0 10px 10px 0;
    border-color: transparent rgba(0, 0, 0, 0.8) transparent transparent

  img
    width: 40px
    opacity: 0.7

#mapCanvas
  position: absolute
  left: 0
  top: 0
  right: 0
  bottom: 0

a[href^="http://maps.google.com/maps"]
  display:none !important

.gmnoprint a
.gmnoprint span
  display:none

.gmnoprint div
  background:none !important
